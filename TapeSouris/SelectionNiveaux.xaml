<Window x:Class="TapeSouris.SelectionNiveaux"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TapeSouris"
        mc:Ignorable="d"
        Title="SelectionNiveaux" Height="450" Width="800" WindowState="Maximized" Icon="/images/souris.png">
    <Grid Height="Auto" Width="Auto" >
        <Viewbox Stretch="UniformToFill">
            <Grid Height="450" Width="800">
                <Image Source="/images/sol.jpg" Stretch="Fill"/>
                <TextBlock x:Name="scoreNiveau1"
           Text="Meilleur score : 0"
           HorizontalAlignment="Center"
           Margin="0,170,200,0"
           Foreground="White"/>

                <TextBlock x:Name="scoreNiveau2"
           Text="Meilleur score : 0"
           HorizontalAlignment="Center"
           Margin="0,170,0,0"
           Foreground="White"/>
                <TextBlock x:Name="scoreNiveau3"
           Text="Meilleur score : 0"
           HorizontalAlignment="Center"
           Margin="200,170,0,0"
           Foreground="White"/>
                <Image Margin="0,200,200,0" Source="/images/SelectNivBut.png" HorizontalAlignment="Center" VerticalAlignment="Top" Stretch="Fill" Width="80" Height="20"/>
                <Image Margin="0,200,0,0" Source="/images/SelectNivBut.png" HorizontalAlignment="Center" VerticalAlignment="Top" Stretch="Fill" Width="80" Height="20"/>
                <Image Margin="200,200,0,0" Source="/images/SelectNivBut.png" HorizontalAlignment="Center" VerticalAlignment="Top" Stretch="Fill" Width="80" Height="20"/>
                <Image Margin="0,0,45,155" Source="/images/SelectNivBut.png" HorizontalAlignment="Right" VerticalAlignment="Bottom" Stretch="Fill" Width="130" Height="30"/>
                <Button x:Name="btnNiveau1" Content="Niveau 1" HorizontalAlignment="Center" Margin="0,200,200,0" VerticalAlignment="Top" Click="btnNiveau1_Click" Background="Transparent" BorderThickness="0,0,0,0"/>
                <Button x:Name="btnNiveau2" Content="Niveau 2" HorizontalAlignment="Center" Margin="0,200,0,0" VerticalAlignment="Top" Click="btnNiveau2_Click" Background="Transparent" BorderThickness="0,0,0,0"/>
                <Button x:Name="btnNiveau3" Content="Niveau 3" HorizontalAlignment="Center" Margin="200,200,0,0" VerticalAlignment="Top" Background="Transparent" BorderThickness="0,0,0,0"/>
                <Button Content="Réinitialiser les scores" Width="120" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="right" Margin="0,0,50,150" Click="ResetScores_Click" Background="Transparent" BorderThickness="0,0,0,0"/>
            </Grid>
        </Viewbox>
    </Grid>

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
</Window>

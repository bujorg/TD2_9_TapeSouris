<Window x:Class="TapeSouris.Jeu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TapeSouris"
        mc:Ignorable="d"
        Title="Jeu" Height="450" Width="800" WindowState="Maximized" MinWidth="1000" MinHeight="562.5" Icon="/images/souris.png">
    <Grid Height="Auto" Width="Auto" >
        <Viewbox Stretch="UniformToFill">
            <Grid x:Name="MainGrid">
                <Image x:Name="imgBackground" Stretch="Fill"/>
                <Image Source="/images/trou.png" Stretch="Fill" Margin="40,75,610,309" Height="50" Width="150"/>
                <Button Name="Souris1" Click="btnSouris_Click" Margin="40,75,610,309" Height="50" Width="150"/>
                <Image Source="/images/trou.png" Stretch="Fill" Margin="230,75,420,309" Height="50" Width="150"/>
                <Button Name="Souris2" Click="btnSouris_Click" Margin="230,75,420,309" Height="50" Width="150"/>
                <Image Source="/images/trou.png" Stretch="Fill" Margin="420,75,230,309" Height="50" Width="150"/>
                <Button Name="Souris3" Click="btnSouris_Click" Margin="420,75,230,309" Height="50" Width="150"/>
                <Image Source="/images/trou.png" Stretch="Fill" Margin="610,75,40,309" Height="50" Width="150"/>
                <Button Name="Souris4" Click="btnSouris_Click" Margin="610,75,40,309" Height="50" Width="150"/>
                <Image Source="/images/trou.png" Stretch="Fill" Margin="88,200,562,184" Height="50" Width="150"/>
                <Button Name="Souris5" Click="btnSouris_Click" Margin="88,200,562,184" Height="50" Width="150"/>
                <Image Source="/images/trou.png" Stretch="Fill" Margin="325,200,325,184" Height="50" Width="150"/>
                <Button Name="Souris6" Click="btnSouris_Click" Margin="325,200,325,184" Height="50" Width="150"/>
                <Image Source="/images/trou.png" Stretch="Fill" Margin="562,200,88,184" Height="50" Width="150"/>
                <Button Name="Souris7" Click="btnSouris_Click" Margin="562,200,88,184" Height="50" Width="150"/>
                <Image Source="/images/trou.png" Stretch="Fill" Margin="40,325,610,75" Height="50" Width="150"/>
                <Button Name="Souris8" Click="btnSouris_Click" Margin="40,325,610,75" Height="50" Width="150"/>
                <Image Source="/images/trou.png" Stretch="Fill" Margin="230,325,420,75" Height="50" Width="150"/>
                <Button Name="Souris9" Click="btnSouris_Click" Margin="230,325,420,75" Height="50" Width="150"/>
                <Image Source="/images/trou.png" Stretch="Fill" Margin="420,325,230,75" Height="50" Width="150"/>
                <Button Name="Souris10" Click="btnSouris_Click" Margin="420,325,230,75" Height="50" Width="150"/>
                <Image Source="/images/trou.png" Stretch="Fill" Margin="610,325,40,75" Height="50" Width="150"/>
                <Button Name="Souris11" Click="btnSouris_Click" Margin="610,325,40,75" Height="50" Width="150"/>
                <TextBlock x:Name="txtScore" Text="Score : 0" FontSize="40" HorizontalAlignment="left" VerticalAlignment="Top" Margin="0,10,0,0" Foreground="White"/>
                <TextBlock x:Name="txtTimer" Text="Temps : 0" FontSize="40" HorizontalAlignment="left" VerticalAlignment="Top" Margin="0,60,0,0" Foreground="White"/>
                <Image Source="/images/pause.png" Stretch="Fill" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,7,7,0" Height="75" Width="75"/>
                <Menu Width="50" Height="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,20,20,0" Background="Transparent">
                    <MenuItem Header="" Click="PauseMenuItem_Click" FontSize="25" Width="50" Height="50"/>
                </Menu>
                <Menu Width="50" Height="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,20,100,0" Background="Transparent">
                    <MenuItem Header="Menu" Click="Menu_Click" Width="50" Height="50"/>
                </Menu>
                
            </Grid>
        </Viewbox>
    </Grid>

        <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>


</Window>

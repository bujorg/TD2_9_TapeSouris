<Window x:Class="TapeSouris.PauseMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pause"
        Height="260"
        Width="300"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#AA000000"
        AllowsTransparency="True"
        KeyDown="Window_KeyDown"
        Loaded="PauseMenu_Loaded"
        Focusable="True"
        Icon="/images/souris.png">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Jeu en pause" FontSize="24" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        <TextBlock Text="Volume" Foreground="White" HorizontalAlignment="Center"/>
        <Slider x:Name="VolumeSlider" Minimum="0" Maximum="1" Value="0.5" Width="150" Margin="0,0,0,20" ValueChanged="VolumeSlider_ValueChanged"/>
        <Button Name="ResumeButton" Content="Reprendre" Width="150" Margin="0,0,0,10" Click="ResumeButton_Click"/>
        <Button Name="QuitButton" Content="Quitter" Width="150" Click="QuitButton_Click"/>
    </StackPanel>
</Window>
